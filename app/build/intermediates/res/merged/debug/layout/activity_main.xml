<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhruv.getplaced.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetPlaced"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="50dp"
        android:id="@+id/textView"
        android:layout_marginStart="21dp"
        android:layout_above="@+id/student-login"
        android:layout_alignStart="@+id/student-login"
        android:layout_marginBottom="192dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="55dp"
        app:srcCompat="@mipmap/logo"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/student-login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Login"
        android:textSize="20sp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:background="#0077B5"
        android:textColor="#ffffff"
        android:layout_above="@+id/company-login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/company-login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Login"
        android:textSize="20sp"
        android:textColor="#0077B5"
        android:background="#ffffff"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
